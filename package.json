{
  "name": "homework-01",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start-auth:dev": "nest start auth --watch",
    "start-billing:dev": "nest start billing --watch",
    "start-order:dev": "nest start order --watch",
    "start-notification:dev": "nest start notification --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/homework-01/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/homework-01/test/jest-e2e.json",
    "typeorm-auth": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d apps/auth/src/db/migrations/data-source.ts",
    "migration-auth:create": "yarn typeorm-auth migration:generate apps/auth/src/db/migrations/migration",
    "migration-auth:migrate": "yarn typeorm-auth migration:run",
    "migration-auth:drop": "yarn typeorm-auth schema:drop",
    "typeorm-order": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d apps/order/src/db/migrations/data-source.ts",
    "migration-order:create": "yarn typeorm-order migration:generate apps/order/src/db/migrations/migration",
    "migration-order:migrate": "yarn typeorm-order migration:run",
    "migration-order:drop": "yarn typeorm-order schema:drop",
    "typeorm-billing": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d apps/billing/src/db/migrations/data-source.ts",
    "migration-billing:create": "yarn typeorm-billing migration:generate apps/billing/src/db/migrations/migration",
    "migration-billing:migrate": "yarn typeorm-billing migration:run",
    "migration-billing:drop": "yarn typeorm-billing schema:drop",
    "typeorm-notification": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d apps/notification/src/db/migrations/data-source.ts",
    "migration-notification:create": "yarn typeorm-notification migration:generate apps/notification/src/db/migrations/migration",
    "migration-notification:migrate": "yarn typeorm-notification migration:run",
    "migration-notification:drop": "yarn typeorm-notification schema:drop"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^5.6.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@willsoto/nestjs-prometheus": "^6.0.1",
    "add": "^2.0.6",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "newman": "^6.2.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/configs(|/.*)$": "<rootDir>/libs/configs/src/$1",
      "^@app/providers(|/.*)$": "<rootDir>/libs/providers/src/$1",
      "^@app/utils(|/.*)$": "<rootDir>/libs/utils/src/$1",
      "^@app/amqp-contracts(|/.*)$": "<rootDir>/libs/amqp-contracts/src/$1"
    }
  }
}
